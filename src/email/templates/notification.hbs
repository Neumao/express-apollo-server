<html>
  <head>
    <meta charset="utf-8" />
    <style>
      body { font-family: Arial, sans-serif; line-height: 1.6; color: #333333; }
      .container { max-width: 600px; margin: 0 auto; padding: 20px; } .button {
      display: inline-block; background-color: #673AB7; color: white;
      text-decoration: none; padding: 10px 20px; border-radius: 5px; margin:
      20px 0; } .footer { margin-top: 30px; font-size: 0.8em; color: #666; }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>{{subject}}</h2>
      <p>Hello {{name}},</p>
      <p>{{message}}</p>
      {{#if actionUrl}}
        <a href="{{actionUrl}}" class="button">{{actionText}}</a>
      {{/if}}
      <div class="footer">
        <p>Thank you,<br />The Team</p>
      </div>
    </div>
  </body>
</html>